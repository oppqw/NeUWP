    <Style TargetType="local:XImage">
        <Setter Property="BorderBrush" Value="{ThemeResource NMDividerThemeBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:XImage">
                    <Grid Margin="{TemplateBinding Padding}">
                        <Grid x:Name="DefaultGrid">
                            <Grid.Background>
                                <ImageBrush x:Name="DefaultImage"/>
                            </Grid.Background>
                        </Grid>
                        <Grid x:Name="OverrideGrid">
                            <Grid.Background>
                                <ImageBrush x:Name="OverrideImage"/>
                            </Grid.Background>
                        </Grid>
                        <Grid x:Name="BorderGrid" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


